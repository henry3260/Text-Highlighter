{
    "manifest_version": 3,
    "name": "Text Highlighter",
    "version": "1.0",
    "description": "Highlight and save selected text on any webpage.",
    "permissions": [
        "contextMenus",
        "storage",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/icon.png"
    },
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    }
}